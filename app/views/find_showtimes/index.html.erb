<div class="container text-center px-lg-4p find-showtimes">
  <h2 class="text-LightCerulean py-3 py-lg-4 m-0"><i class="fa-solid fa-magnifying-glass"></i>快搜條件</h2>
  <div class="d-flex" data-controller="search-showtime-by-area">
    <div class="col d-flex flex-wrap">
      <div class="col-12 col-sm-4 col-xl-2 py-2">
        <div class="d-flex align-items-center position-relative item">
          <div class="icon position-absolute"><i class="m-0 fa-solid fa-location-dot "></i></div>
          <select class="form-select w-90" 
                    aria-label="select" 
                    data-action="change->search-showtime-by-area#addMovieList"
            data-search-showtime-by-area-target="area">
            <option>請選擇地區</option>
            <% @theater_areas.each do |theater_area| %>
              <option value="<%= theater_area[1] %>" ><%= theater_area[0] %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="col-12 col-sm-4 col-xl-2 py-2">
        <div class="d-flex align-items-center position-relative item">
          <div class="icon position-absolute"><i class="m-0 fa-solid fa-video "></i></div>
          <select class="form-select w-90" 
                      aria-label="select"
                      data-search-showtime-by-area-target="movieList"
                      data-action="change->search-showtime-by-area#addShowtimeList">
            <option>請選擇電影</option>
          </select>
        </div>
      </div>
      <div class="col-12 col-sm-4 col-xl-2 py-2">
        <div class="d-flex">
          <div class="col d-flex align-items-center position-relative item ">
            <div class="icon position-absolute"><i class="m-0 fa-regular fa-calendar-days"></i></div>
            <select class="form-select w-90 col" 
                          aria-label="select"
                          data-search-showtime-by-area-target="showtimeList"
                          data-action="change->search-showtime-by-area#addTimeSelect">
              <option>請選擇日期</option>
            </select>
          </div>
        </div>
      </div>
      <div class="col-12 col-xl-4 d-flex">
        <div class="col">
          <div class="py-2 d-flex align-items-center position-relative item">
            <div class="icon position-absolute"><i class="m-0 fa-solid fa-location-dot"></i></div>
            <select class="form-select w-90 col" 
                          aria-label="select"
                          data-search-showtime-by-area-target="startTime">
              <option value="0">時段(起)</option>
            </select>
          </div>
        </div>
        <div class="col">
          <div class="py-2 d-flex align-items-center position-relative item">
            <div class="icon position-absolute"><i class="m-0 fa-solid fa-location-dot"></i></div>
            <select class="form-select w-90 col" 
                          aria-label="select"
                          data-search-showtime-by-area-target="endTime"
                          data-action="change->search-showtime-by-area#changeLink">
              <option value="0">時段(迄)</option>
            </select>
          </div>
        </div>
      </div>
      <div class="col-12 col-xl-2 py-2 pe-lg-5 d-flex align-items-center justify-content-center">
        <%= link_to "查詢場次", "#", class: "click->search-showtime-by-area#checkAreaData text-center btn btn-LightCerulean", id: "rootSearchShowtime"%>
      </div>
    </div>
  </div>
  <section class="py-3">
    <h2 class="text-LightCerulean">快搜空位結果</h2>
  </section>
</div>
