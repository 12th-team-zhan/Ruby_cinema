<h2>會員註冊</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

<div class="card text-center">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <a class="nav-link disabled">會員權益</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" >會員條款</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" aria-current="true" href="#">會員基本資料</a>
      </li>
    </ul>
  </div>
  <div class="card-body">
    <h2 class="card-title">會員基本資料</h2>
      <section class="vh-80">
       <div class="container py-6">
          <div class="d-flex align-items-center justify-content-center">
            <div class="col-10 col-md-8 col-lg-6 col-xl-5 ">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
              
                <%# name %>
                <div class="form-outline mb-4">
                  <label class="form-label" for="form1Example13">您的姓名</label>
                  <div class="form-control form-control-lg">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %> 
                  </div>
                </div>
              
                <%# birthday %>
                <div class="form-outline mb-4">
                  <label class="form-label" for="form1Example23">西元出生日期</label>
                  <div class="form-control form-control-lg">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %> 
                  </div>
                </div>

                <%#  phone  %>
                <div class="form-outline mb-4">
                  <label class="form-label" for="form1Example13">手機號碼</label>
                  <div class="form-control form-control-lg">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %> 
                  </div>
                </div>

                <%# email %>
                <div class="field form-outline mb-4">
                  <div class="form-label ">
                    <label class="form-label" for="form1Example13">網路帳號信箱</label>
                  </div>
                  <div class="form-control form-control-lg">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %> 
                  </div>
                </div>

                <%# password %>
                <div class="field form-outline mb-4">
                  <label class="form-label" for="form1Example13">密碼</label>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <div class="form-control form-control-lg">
                    <%= f.password_field :password, autocomplete: "new-password" %>                  
                  </div>
                 
                </div>

                <div class="field form-outline mb-4">
                  <label class="form-label" for="form1Example13">確認密碼</label>
                  <div class="form-control form-control-lg">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>                  
                  </div>
                </div>

                <div class="actions">
                  <%= f.submit "註冊" %>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
          
            </div>
          </div>
        </div>
      </section>
  </div>
</div>




