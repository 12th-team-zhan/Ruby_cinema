<h1>編輯影城資訊</h1>
<% if @theater.errors.any? %>
  <ul>
    <% @theater.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: @theater, url: admin_theater_path, method: "patch") do |form| %>
  <div>
    <%= form.label :exterior_img %>
    <%= form.file_field :exterior_img %>
  </div>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :area %>
    <%= form.select :area, options_for_select(human_attribute_areas, @theater.area) %>
  </div>
  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <div>
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>
  <%= form.submit "送出" %>
<% end %>
