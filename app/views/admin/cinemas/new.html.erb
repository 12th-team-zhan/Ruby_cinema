<%= render "shared/nav" %>

<h1>新增影廳</h1>
<div>
    <%= form_with(url: admin_cinemas_path, model: @cinema, method: "post") do |f| %>
        <div>
            <%= f.label("名稱") %>
        </div>
        <div>
            <%= f.text_field(:name) %>
        </div>

        <br>

        <div>
            <%= f.label("最大排數") %>
        </div>
        <div>
            <%= f.text_field(:max_row) %>
        </div>

        <br>
        
        <div>
            <%= f.label("最大欄數") %>
        </div>
        <div>
            <%= f.text_field(:max_column) %>
        </div>

        <br>
        
        <div>
            <%= f.submit("下一步") %>
        </div>
    <% end %>
</div>
