<div class="main flex-grow-1 p-0 ms-1">
  <div class="container container-breadcrumb ">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href=<%= admin_movies_path %>>後台首頁</a></li>
            <li class="breadcrumb-item"><a href=<%= admin_theaters_path %>><%= @theater.name %></a></li>
            <li class="breadcrumb-item active" aria-current="page">影廳列表</li>
            </ol>
          </nav>
        </div>
        <div class="container">
          <%= link_to "新增影廳", new_admin_theater_cinema_path, class: "btn btn-primary" %>
          <table class="table table-striped ">
            <thead>
              <tr>
                <th scope="col">影廳名稱</th>
                <th scope="col">最大排數</th>
                <th scope="col">最大欄數</th>
                <th scope="col">一般票價格</th>
                <th scope="col">優待票價格</th>
                <th scope="col">愛心票價格</th>
                <th scope="col">敬老票價格</th>
                <th scope="col">編輯影廳</th>
                <th scope="col">刪除影廳</th>
                <th scope="col">座位表</th>
                </tr>
            </thead>
            <tbody>
              <% @cinemas.each do |cinema| %>
                <tr>
                  <td><%= cinema.name%></td>
                  <td><%= cinema.max_row %></td>
                  <td><%= cinema.max_column %></td>
                  <td><%= cinema.regular_price %></td>
                  <td><%= cinema.concession_price %></td>
                  <td><%= cinema.disability_price %></td>
                  <td><%= cinema.elderly_price %></td>
                  <td><%= link_to "編輯", edit_admin_cinema_path(cinema) %></td>
                  <td><%= link_to "刪除", admin_cinema_path(cinema), method: "delete", data: {confirm: "確定刪除#{cinema.name}？"}%></td>
                  <td><%= link_to "檢視", admin_cinema_seats_path(cinema) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
