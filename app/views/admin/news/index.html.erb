<div class="main flex-grow-1 p-0 ms-1">
  <div class="container container-breadcrumb ">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "後台首頁",admin_news_index_path %></li>
        <li class="breadcrumb-item active" aria-current="page">消息列表</li>
      </ol>
    </nav>
  </div>
  <div class="container">
    <%= link_to "新增消息",new_admin_news_path ,class: "btn btn-primary" %>
    <table class="table table-striped ">
      <thead>
        <tr>
          <th scope="col">消息名稱</th>
          <th scope="col">編輯</th>
          <th scope="col">建立者ID</th>
          <th scope="col">新增時間</th>
          <th scope="col">編輯者ID</th>
          <th scope="col">編輯時間</th>
        </tr>
      </thead>
      <% @news.each do |news| %>
        <tbody>
          <tr>
            <td><%= news.title %></td>
            <td><%= link_to "編輯", edit_admin_news_path(news) %></td>
            <td><%= news.user_id %></td>
            <td><%= news.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= news.edit_user_id %></td>
            <td><%= news.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
