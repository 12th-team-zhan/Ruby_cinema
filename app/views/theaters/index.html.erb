<div class="front-breadcrumb bg-Silver">
  <nav class="container px-lg-4p" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "首頁", root_path, class: "text-muted"  %></li>
      <li class="breadcrumb-item active text-deepskyblue" aria-current="page">影城據點</li>
    </ol>
  </nav>
</div>
<section class="container px-lg-4p">
  <h1 class="text-deepskyblue">影城據點</h1>
  <div class="theater-list d-flex flex-wrap">
    <% @theaters.each do |theater| %>
      <div class="card theater-card col-12 col-xl-6 py-4 ">
        <div class="d-flex flex-column flex-sm-row">
          <%= link_to theater_path(theater), class: "img" do %>
            <% if theater.exterior_img.attached? %>
              <%= image_tag theater.exterior_img, size: "240x165" %>
            <% end %>
          <% end %>
          <div class="card-body px-0 px-sm-3">
            <h5 class="card-title"><%= link_to theater.name, theater_path(theater) %></h5>
            <div class="d-flex position-relative">
              <div class="icon ps-1">
                <i class="fa-solid fa-location-dot "></i>
              </div>
              <p class="card-text ms-4">影城地址：<%= theater.address %></p>
            </div>
            <div class="d-flex position-relative">
              <div class="icon">
                <i class="fa-solid fa-phone-flip "></i>
              </div>
              <p class="card-text ms-4">服務專線：<%= theater.phone %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
<section class="text-center py-3">
  <%= link_to "回首頁", root_path, class: "btn btn-LightCerulean btn-lg " %>
</section>
