<div id="carousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="5000">
      <img src="https://images-ext-1.discordapp.net/external/c7Y9Z-zFICKhdNQ6GO5SM3_gsSaAnNFsfuHY73ipODg/https/char.tw/wp-content/uploads/20181215004620_68.jpg "
           class="d-block w-100 mh-100 ">
    </div>
    <div class="carousel-item" data-bs-interval="5000">
      <img src="https://images-ext-2.discordapp.net/external/8HLjaSzXtNUTo_jgiYee15ZZmVCoBAqLM_1RWYPRUVM/%3Fresize%3D1600%252C609/https/i0.wp.com/char.tw/wp-content/uploads/20181205171539_31.jpg"
           class="d-block w-100 mh-100 ">
    </div>
    <div class="carousel-item" data-bs-interval="5000">
      <img src="https://images-ext-2.discordapp.net/external/kqRyHLm4yRBIgeR4p7wnqx0Vy5xddn1Oh9TqQ1CBklw/https/char.tw/wp-content/uploads/20181212161823_43.jpg"
           class="d-block w-100 mh-100 ">
    </div>
  </div>
  <button class="carousel-control-prev"
          type="button"
          data-bs-target="#carousel"
          data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next"
          type="button"
          data-bs-target="#carousel"
          data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<article class="d-md-flex container-xl p-0">
  <div class="container-md d-flex col-12 col-md-7 px-md-auto py-3 px-sm-5p px-md-4 mx-0 
              justify-content-center search" >
    <div class="qalist d-none d-lg-block col-lg-3 ">
      <ul class="bg-secondary mt-4 p-0">
        <li class="bg-darkgray ps-4 py-2 border-bottom text-white"><%= link_to "線上訂票", root_path, class: "text-white" %></li>
        <li class="bg-darkgray ps-4 py-2 border-bottom text-white"><%= link_to "電影介紹", movies_path, class: "text-white" %></li>
        <li class="bg-darkgray ps-4 py-2 border-bottom text-white"><%= link_to "影城資訊", theaters_path, class: "text-white" %></li>
        <li class="bg-darkgray ps-4 py-2 border-bottom text-white"><%= link_to "場次查詢", find_showtimes_path, class: "text-white" %></li>
      </ul>
    </div>
    <div class="container col-12 col-lg-9 mx-md-0 px-4 bg-cerulean rounded-4 body" data-controller="index-search-form">
      <div class="container search-top d-flex text-light justify-content-around">
        <button class="py-2 btn btn-cerulean py-3"  disabled= "disabled"
                data-index-search-form-target="ticketBtn"
                data-action="click->index-search-form#formSwitch"><span class="fs-4 fs-scale">快速訂票</span>
        </button>
        <button class="py-2 btn btn-cerulean py-3"  
                data-index-search-form-target="setBtn"
                data-action="click->index-search-form#formSwitch"><span class="fs-4">快搜場次</span>
        </button>
      </div>
      <div class="search-middle py-3" >
        <%= render "search_showtime" %>
        <%= render "search_by_area" %>
      </div>
    </div>
  </div>
  <div class="container d-flex col-12 col-md-5 py-3 col-lg-5  flex-column new">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb align-items-baseline m-0 ">
        <li class="breadcrumb-item">
          <p class="fs-4 text-deepskyblue" >最新公告</p>
        </li>
        <li class="breadcrumb-item active text-dark" aria-current="page">
          <%= link_to "MORE", news_index_path, class: "link-dark"%></li>
      </ol>
    </nav>
    <ul class="list-group gap-1 flex-grow-1">
      <% @news.each do |news| %>
        <li class="list-group-item ps-0">
          <span class="new-date bg-deepskyblue text-light p-1 me-3">
            <%= news.created_at.strftime("%Y/%m/%d") %></span>
          <%= link_to news.title, news_path(news), class: "new-text text-LightCerulean" %>
        </li>
      <% end %>
    </ul>
  </div>
</article>
