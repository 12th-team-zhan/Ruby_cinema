<div class="front-breadcrumb bg-Silver">
  <nav class="container px-lg-4p" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "首頁", root_path, class: "text-muted"  %></li>
      <li class="breadcrumb-item" ><%= link_to "電影介紹", theaters_path, class: "text-muted"  %></li>
      <li class="breadcrumb-item active text-deepskyblue" aria-current="page"><%= @movie.name %></li>
    </ol>
  </nav>
  <div class="container w-75 py-5">
    <section class="row">
      <div  class="d-flex">
        <div class="col-4 poster me-3">
          <%= image_tag @movie.movie_poster, class: "m-auto w-100" %>
        </div>
        <div class="col-8 text flex-grow-1">
          <ul class="list-group pb-3">
            <li class="list-group-item ps-0 pt-0 fs-3 title">
              <h2><%= @movie.name %></h2>
            </li>
            <li class="list-group-item ps-0 pt-0 fs-3 title text-info">
              <h2><%= @movie.eng_name %></h2>
            </li>
            <li class="list-group-item ps-0 pt-0 title">級別：
              <h2><%= @movie.film_rating %></h2>
            </li>
            <li class="list-group-item ps-0 pt-0 title">上映日期：
              <h2><%= @movie.debut_date %></h2>
            </li>
          </ul>
          <ul class="list-group">
            <h3 class="text-secondary">MOVIE INFO</h3>
            <li>導演：<%= @movie.director %></li>
            <li>主演：<%= @movie.actor %></li>
            <li>時長：<%= @movie.duration %></li>
          </ul>
        </div>
      </div>
    </section>
  </div>
  <div class="bg-darkgray">
    <section class="container w-75 py-5">
      預告片
    </section>
  </div>
  <div class="container w-75 py-5">
    <section>
      <h2>電影簡介</h2>
      <%= @movie.description %>
      <article>
      </article>
    </section>
  </div>
  <div class="container w-75 py-5">
    <section>
      輪播圖
    </section>
  </div>
