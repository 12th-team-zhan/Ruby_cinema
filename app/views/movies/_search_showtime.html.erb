<div class="item d-grid gap-2 " data-index-search-form-target="ticketForm" data-controller="search--search-showtime">
  <div class="d-flex justify-content-around align-items-center">
    <div class="icon"><i class="m-0 fa-solid fa-location-dot text-white"></i></div>
    <select class="form-select w-90" 
                    aria-label="select" 
                    data-action="change->search--search-showtime#addTheaterList">
      <option>請選擇電影</option>
      <% @movies.each do |movie| %>
        <option value="<%= movie.id %>" ><%= movie.name %></option>
      <% end %>
    </select>
  </div>
  <div class="d-flex justify-content-around align-items-center">
    <div class="icon"><i class="m-0 fa-solid fa-video text-white"></i></div>
    <select class="form-select w-90" 
                    aria-label="select" 
                    data-action="change->search--search-showtime#addShowtimeDate" 
      data-search--search-showtime-target="theaterList">
      <option>請選擇影城</option>
    </select>
  </div>
  <div class="d-flex justify-content-around align-items-center">
    <div class="icon"><i class="m-0 fa-regular fa-calendar-days text-white"></i></div>
    <select class="form-select w-90" 
                    aria-label="select" 
                    data-search--search-showtime-target="showtimeDate"
                    data-action="change->search--search-showtime#addShowtime">
      <option value="0">請選擇日期</option>
    </select>
  </div>
  <div class="d-flex justify-content-around align-items-center">
    <div class="icon"><i class="m-0 fa-regular fa-clock text-white"></i></div>
    <select class="form-select w-90" 
                    aria-label="select" 
                    data-search--search-showtime-target="showtime"
                    data-action="change->search--search-showtime#changeLink">
      <option value="0">請選擇場次</option>
    </select>
  </div>
  <div class="container search-bottom d-flex text-light justify-content-around pb-3">
    <span class="my-2 py-1 px-4 bg-primary3"
                  data-action="click->search--search-showtime#checkBookingData">
      <%= link_to "前往訂票", "#", class: "btn btn-deepskyblue btn-lg", id: "rootBuyTickets" %>
    </span>
  </div>
</div>
